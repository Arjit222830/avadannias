            script(type="text/javascript").
            
                var demo= document.getElementsByClassName("demo");
            
                var qz=!{JSON.stringify(quizzes)};
                
                console.log(qz);
                var points=0;

                $(document).ready(()=>{
                    for(var x=0;x<qz.length;x++)
                        ajax(x);
                });
                
                function ajax(x)
                {  
                    $("#form_quiz"+x).submit( (e)=>{
                        e.preventDefault();
                        $.ajax({
                            url: '/quiz',
                            data : {
                                choice: $("#choice"+x+":checked").val(),
                                index: x
                            },
                            method: "POST",
                            success : function(data){
                                console.log(data.result);
                                if(data.result=='Correct')
                                {
                                    var i=document.createElement('i');
                                    i.setAttribute('id','tick');
                                    i.setAttribute('class','fa fa-check');
                                    demo[x].appendChild(i);
                                    var m= document.createElement('m');
                                    m.setAttribute('style','color:black;font-size: 20px');
                                    m.innerHTML= data.result;
                                    m.appendChild(document.createElement('br'));
                                    i.appendChild(m);
                                    $("button").remove("#submit"+x);
                                    points++;
                                }
                                else if(data.result=='Wrong')
                                {
                                    var i=document.createElement('i');
                                    i.setAttribute('id','cross');
                                    i.setAttribute('class','fa fa-times');
                                    var m= document.createElement('m');
                                    m.setAttribute('style','color:black;font-size: 20px');
                                    m.innerHTML= data.result;
                                    m.appendChild(document.createElement('br'));
                                    var i2= document.createElement('i');
                                    i2.setAttribute('id','tick');
                                    i2.setAttribute('class','fa fa-check');
                                    var n= document.createElement('n');
                                    n.innerHTML= data.correct;
                                    n.setAttribute('style','color:black;font-size: 20px');
                                    n.appendChild(document.createElement('br'));
                                    i2.appendChild(n);
                                    i.appendChild(m);
                                    i.appendChild(i2);
                                    demo[x].appendChild(i);
                                    $("button").remove("#submit"+x);
                                }
                            },
                            error:function(err){
                                alert(JSON.stringify(err.responseText));
                            }
                        }); 
                    });
                }
                
                $(document).ready(()=>{
                    $("#form_points").submit( (e)=>{
                        e.preventDefault();
                        $.ajax({
                            url: '/quiz/submit',
                            method: "GET",
                            success : function(data){
                                var restart= document.getElementById("restart");
                                var m= document.createElement('m');
                                m.setAttribute('style','font-weight:bold;color:#468b0b;font-size: 18px;margin-left:20vw;');
                                m.innerHTML=data.message1+points+data.message2+qz.length+data.message3;
                                m.appendChild(document.createElement('br'));
                                var form= document.createElement('form');
                                form.setAttribute('action',data.link);
                                var btn= document.createElement('button');
                                btn.setAttribute('type','submit');
                                btn.setAttribute('style','margin-left:30vw');
                                btn.innerHTML="Restart";
                                form.appendChild(btn)
                                restart.appendChild(m);
                                restart.appendChild(form);
                                $("button").remove("#sub");
                            },
                            error:function(err){
                                alert(JSON.stringify(err.responseText));
                            }
                        }); 
                    });
                });
                
                
